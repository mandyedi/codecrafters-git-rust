    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug no args 'codecrafters-git' ",
            "cargo": {
                "args": [
                    "build",
                    "--bin=codecrafters-git",
                    "--package=codecrafters-git"
                ],
                "filter": {
                    "name": "codecrafters-git",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}/src"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug init 'codecrafters-git'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=codecrafters-git",
                    "--package=codecrafters-git"
                ],
                "filter": {
                    "name": "codecrafters-git",
                    "kind": "bin"
                }
            },
            "args": ["init"],
            "cwd": "${workspaceFolder}/src"
        },
    ]
}